{
  "name": "emlite",
  "version": "0.1.15",
  "description": "A tiny JS bridge for C/C++ via wasm",
  "main": "src/emlite.js",
  "type": "module",
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "build_tests": "node scripts/build_tests.js",
    "test_node": "node --trace-warnings tests/node_test.js",
    "gen_html_tests": "node scripts/gen_html_tests.js",
    "test_all": "npm run build_tests && npm run test_node && npm run gen_html_tests",
    "serve": "http-server ./bin",
    "clean": "rm -rf bin",
    "gen_docs": "clang-doc-18 include/emlite/emlite.hpp --format=html --stylesheets=scripts/docstyle.css -- --target=wasm32-wasip1 --sysroot=$WASI_SDK/share/wasi-sysroot && cp scripts/clang-doc-default-stylesheet.css docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoAlyousef/emlite.git"
  },
  "keywords": [
    "wasm",
    "wasi",
    "polyfill",
    "shim",
    "webassembly"
  ],
  "author": "MoAlyousef",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MoAlyousef/emlite/issues"
  },
  "homepage": "https://github.com/MoAlyousef/emlite#readme",
  "devDependencies": {
    "@bjorn3/browser_wasi_shim": "^0.4.1",
    "@eslint/js": "^9.29.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "http-server": "^14.1.1",
    "webpack-cli": "^6.0.1"
  }
}
